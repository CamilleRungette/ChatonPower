<div class="card show-card">
  <h3 class="card-header">Welcome to you profile:</h3>
  <div class="card-body">
    <h5 class="card-title"> <%= @user.first_name %> <%= @user.last_name %> </h5>
    <h6 class="card-subtitle text-muted">Member since: <%= @user.created_at %></h6>
  </div>

  <% if @user.avatar.attached? %>
  <%= image_tag @user.avatar, alt: 'avatar' %>
  <%= form_tag user_avatars_path(@user), multipart: true do %>
  <%= file_field_tag :avatar %>
  <%= submit_tag "mettre à jour" %>
  <% end %>
  <% else %>
  <p>=== Il n'y a pas encore d'avatar lié à cet utilisateur ===</p>
  <%= form_tag user_avatars_path(@user.id), multipart: true do %>
  <%= file_field_tag :avatar %><br>
  <%= submit_tag 'change your avatar', :class => "btn btn-outline-secondary", :style => "width: 10rem;" %>
  <% end %>
  <% end %>

  <div class="card-body">
    <p class="card-text"></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"> Number of orders : <%= current_user.orders.count %>
    </li>
    <li class="list-group-item">Contact: <%= @user.email %></li>
  </ul>
  <div class="card-body">
    <a href="/" class="card-link">Home Page</a>
    <a href="#" class="card-link">My orders</a>
  </div>
  <div class="card-footer text-muted">
    2 days ago
  </div>
</div>

