<ul class="list-group">
	<% @items.each do |item| %>
	<li class="list-group-item d-flex justify-content-between align-items-center list-checkout-cart">

		<div class="item-details-container">
			<img class="product-image" src="https://images.unsplash.com/photo-1472491235688-bdc81a63246e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80">
			<div class="item-title-description">
				<h3><%= item.title %></h3>
				<small class="text-muted description-text-item">DESCRIPTION plus longue pour se rendre co;ptre dskjcwdfjknwekjfnwejkbwjkbvkjbwkbfkqhfk</small>
			</div>
		</div>

		<div class="price-container">
			<%= item.price %>€
		</div>

		<div class="quantity-button">
			<div class="form-group">
				<label for="exampleSelect1">Quantité</label>
				<div class="inputndelete">
					<div>
						<select class="form-control" id="exampleSelect1">
							<option>1</option>
							<option>2</option>
							<option>3</option>
							<option>4</option>
							<option>5</option>
						</select>
					</div>

					<div class="trash-div">
						<i class="fas fa-trash-alt trash"></i>
					</div>
				</div>
			</div>
		</div>  
	</li>
<% end %>
</ul>

<hr class="total-bar" >
<h5 class="total-cart">Sous-total (3 articles) : 111,49 €</h5>



