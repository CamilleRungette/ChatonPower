
<% if @cart != nil %>
	<% @items.each do |item| %>
		<ul class="list-group">
			<li class="list-group-item d-flex justify-content-between align-items-center list-checkout-cart">
				<div class="item-details-container" style="">
				<img class="product-image" src="https://images.unsplash.com/photo-1472491235688-bdc81a63246e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80">
				<div class="item-title-description">

				<h3><%= item.title %></h3>
				<small class="text-muted">DESCRIPTION plus longue pour se rendre co;ptre dskjcwdfjknwekjfnwejkbwjkbvkjbwkbfkqhfk</small>
				</div>
				</div>

				<div class="price-container">
				<%= item.price %>
				</div>

				<div class="quantity-button">
				<span class="badge badge-primary badge-pill">14</span>
				</div>   
				<%= link_to "", root_path, class:"fas fa-trash-alt" %>
			</li>
		</ul>

	<% end %>

	<div class="total">
		<% count = 0.0 %>
		<% @items.each do |item|%>
		<% count += item.price %>
		<% end %>
		Total = <%= count %>
	</div>
	<% else%>

	<p>c vide lol</p>

<% end %>